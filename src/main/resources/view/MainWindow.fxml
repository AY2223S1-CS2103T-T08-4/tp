                     <TextField alignment="TOP_CENTER" text="Student" />
              <StackPane fx:id="studentListPanelPlaceholder" prefWidth="318.0" VBox.vgrow="ALWAYS" />
            </VBox>

            <VBox fx:id="questionList" minWidth="340" prefWidth="340" styleClass="pane-with-border" VBox.vgrow="ALWAYS">
              <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
              </padding>
                     <TextField alignment="TOP_CENTER" text="Question" />
              <StackPane fx:id="questionListPanelPlaceholder" VBox.vgrow="ALWAYS" />
            </VBox>

            <VBox fx:id="tutorialList" minWidth="340" prefWidth="340" styleClass="pane-with-border" VBox.vgrow="ALWAYS">
              <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
              </padding>
                     <TextField alignment="TOP_CENTER" text="Tutorial" />
              <StackPane fx:id="tutorialListPanelPlaceholder" VBox.vgrow="ALWAYS" />
            </VBox>
          </items>
